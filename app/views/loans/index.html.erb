<body id = 'terminalbody'>
<div>
    <center>
      <div id = 'displaytitlebox'>
        <h2 id = 'maindisplaytitle'>CURRENT LOANS INDEX</h2>
      </div>
      <div class = 'currentloansindexmaindisplay'>
      		
          <table>
  			    <% @loans.each do |loan| %>
    		    
            <tr class = "<%= cycle('listlineodd', 'listlineeven')%>">
              <td class = 'loandata'>
                <dl id = 'borrowername'><h4>Name of Borrower:&nbsp&nbsp<%=loan.name_of_borrower%></h4></dl>
                <dt>Loan ID Number:&nbsp&nbsp<%= loan.id%></dt>
     			      <dt>Loan Type:&nbsp&nbsp<%= loan.loan_type%></dt>
                <dt>Loan Origination Date:&nbsp&nbsp<%=loan.origination_date.present? ? loan.origination_date.strftime("%m/%d/%Y") : loan.origination_date%></dt>
              </td>
              <td class = 'loandata2'>
                <dt>Loan Principle Amount:&nbsp&nbsp<%= loan.loan_principle.present? ? number_to_currency(loan.loan_principle) : loan.loan_principle%></dt>
                <dt>Interest Rate:&nbsp&nbsp<%= loan.loan_interest_rate%>%</dt>
                <dt>Term of Loan:&nbsp&nbsp<%= loan.loan_term%>Years</dt>
              </td>
              <td id = 'listactions'>
                <%=link_to 'Show', loan%>
                <%=link_to 'Edit', edit_loan_path(loan)%>
                <%=link_to 'Delete', loan_path(loan.id), :method => :delete, data: {confirm: 'Are You Sure?'}%>
              </td>
            </tr>
            <% end %>
          </table> 
      </div>
      
    </center>  
</div>
